                                <version>4.0.2.GA</version>
                            </dependency>
                        </dependencies>
                        <executions>
                            <execution>
                                <id>generate-schema</id>
                                <goals>
                                    <goal>hbm2ddl</goal>
                                </goals>
                                <phase>compile</phase>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
