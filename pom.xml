                                </component>
                            </components>
                            <componentProperties>
                                <outputfilename>db-schema.sql</outputfilename>
                                <drop>false</drop>
                                <create>true</create>
                                <update>false</update>
                                <format>true</format>
                                <export>false</export>
                                <ejb3>true</ejb3>
                            </componentProperties>
                        </configuration>
