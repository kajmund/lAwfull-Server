<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:roleBased="urn:import:lawscraper.client.ui.panels.rolebasedwidgets"
             xmlns:lawsbynamepanel="urn:import:lawscraper.client.ui.panels.lawsbynamepanel"
             xmlns:lawsbycategorypanel="urn:import:lawscraper.client.ui.panels.lawsbycategorypanel"
             xmlns:lawcasesbyyearpanel="urn:import:lawscraper.client.ui.panels.lawcasesbyyearpanel"
             xmlns:searchPanels="urn:import:lawscraper.client.ui.panels.shortsearchresultpanel">

    <ui:style>
        .stackHeader {
            color: #15428B;
            font-size: 2px;
        }

        .lightblueGradient {
            /*
            background-image: literal("linear-gradient(bottom, rgb(255, 255, 255) 40%, rgb(101, 166, 245) 100%)");
            background-image: literal("-o-linear-gradient(bottom, rgb(255, 255, 255) 40%, rgb(101, 166, 245) 100%)");
            background-image: literal("-moz-linear-gradient(bottom, rgb(255,255,255) 40%, rgb(222,237,255) 100%)");
            background-image: literal("-webkit-linear-gradient(bottom, rgb(255, 255, 255) 40%, rgb(101, 166, 245) 100%)");
            background-image: literal("-ms-linear-gradient(bottom, rgb(255, 255, 255) 40%, rgb(101, 166, 245) 100%)");
            background-image: literal("-webkit-gradient(linear, left bottom, left top, color-stop(0.4, rgb(255, 255, 255)), color-stop(4, rgb(101, 166, 245)))");
            */
            border: none;

        }

        .headerFont {
            color: #15428B;
            cursor: default;
            font-family: Tahoma, Verdana, sans-serif;
            font-size: 16px;
            font-weight: bold;
            margin-left: 8px;
            position: absolute;
            top: 83px;
        }

        .pageSection {
            background-image: url("http://gwt-cx.com/serendipity/serendipity/gwtcx/skins/aqua/images/navigation_pane_header.png");
            background-repeat: repeat-x;
            left: 0;
            right: 0;
            background-size: 34px auto;
            height: 34px;

        }

        .headerContainer {
            left: 0;
            right: 0;

            height: 53px;
            background-image: url("http://gwt-cx.com/serendipity/serendipity/gwtcx/skins/aqua/images/masthead.png");
            background-repeat: repeat-x;
        }

        .menuContainer {
            border-top: 1px solid #15428B;
            border-bottom: 1px solid #15428B;
            left: 0;
            right: 0;

            height: 10%;
        }

        .titleContainer {
            left: 0;
            right: 0;

            height: 100%;
            border-bottom: 1px solid #15428B;
        }

        .mainContentTitleContainer {
            float: left;
            width: 80%;
            height: 5%;
        }

        .mainContentTitle {
            /* width: 100%; */
            left: 0;
            right: 0;
            border-left: 1px solid #15428B;
        }

        .mainContentContainer {
            height: 100%;
            right: 0;
            width: 98%;
            position: relative;
            float: left;
        }

        .mainContainer {
            float: left;
            width: 80%;
            min-height: 800px;
        }

        .leftContainer {
            float: left;
            width: 100%;
            height: 768px;
        }

        .parentContainer {
            height: 100%;
            width: 100%;
        }

        .clearBoth {
            clear: both;
        }

        .legalResearchList {
            width: 20%;
            position: absolute;
            right: 0;
            margin-right: 2px;
            margin-top: 3px;
        }

        .searchTextBox {
            left: 30%;
            margin-right: 8px;
            position: absolute;
            top: 15px;
            width: 20%;
            padding: 4px 7px;
            outline: 0;
            border-color: #87cefa;
            top: 82px;
            height: 11px;
        }

        .searchTextBox:focus {

            /* supported IE8+ and all other browsers tested.
             * optional, but gives the input focues when selected.
   	         * change to a color that suits your design.
    	     */
            border-color: #00008b;

        }

        .searchResultPanel {
            height: 100%;
        }

        .borderRight {
            border-right: solid 1px;
        }

        .addLegalResearch {
            float: right;
            font-size: 23px;
            margin-right: 8px;
            margin-top: -2px;
        }

        .loginDeckPanel {
            float: right;
            margin-right: 8px;
        }

        .leftMenu {
            width: 2%;
            min-height: 768px;
            height: 100%;
            padding-top: 25px;
            float: left;

        }

        .verticalText {
            -moz-transform: rotate(270deg);
            -moz-transform-origin: top left;
            -webkit-transform: rotate(270deg);
            -webkit-transform-origin: top left;
            -o-transform: rotate(270deg);
            -o-transform-origin: top left;
            filter: progid:DXImageTransform.Microsoft.BasicImage(rotation = 1);
        }

        .leftMenuButtons {
            margin-left: 3px;
            margin-top: 68px;
            width: 75px;
            text-align: center;
        }

        .splitPanel {
            position: static;
        }

        .gwt-SplitLayoutPanel {
            position: static;
        }

        @external .gwt-SplitLayoutPanel;


    </ui:style>


    <g:FlowPanel addStyleNames="{style.parentContainer}">
        <g:FlowPanel>
            <g:FlowPanel  addStyleNames="{style.headerContainer}" ui:field="header">
                <g:FlowPanel>
                    <g:Label>lAwfull</g:Label>
                </g:FlowPanel>
                <g:FlowPanel ui:field="loginContainer">
                    <g:DeckPanel ui:field="loginDeckPanel" addStyleNames="{style.loginDeckPanel}">
                        <g:FormPanel method="POST" action="/authenticate.do" ui:field="loginForm">
                            <g:HTMLPanel>
                                <table>
                                    <td>
                                        Användarnamn:
                                    </td>
                                    <td>
                                        <g:TextBox name="j_username" ui:field="userNameTextBox"/>
                                    </td>
                                    <td>
                                        Lösenord:
                                    </td>
                                    <td>
                                        <g:PasswordTextBox ui:field="passwordTextBox" name="j_password"/>
                                    </td>
                                </table>
                            </g:HTMLPanel>
                        </g:FormPanel>
                        <g:HTMLPanel>
                            <table>
                                <tr>
                                    <td>Inloggad som:</td>
                                    <td>
                                        <g:Label ui:field="userName"></g:Label>
                                    </td>
                                    <td>
                                        <g:Anchor href="/logout.do">Logga ut</g:Anchor>
                                    </td>
                                </tr>
                            </table>
                        </g:HTMLPanel>
                    </g:DeckPanel>
                </g:FlowPanel>
            </g:FlowPanel>


            <g:FlowPanel ui:field="pageSection" addStyleNames="{style.pageSection}, {style.borderRight}">
                <g:FlowPanel ui:field="flerpTabPanelContainer"/>
                <g:FlowPanel addStyleNames="{style.clearBoth}"/>
                <g:HTMLPanel>
                    <div style="float:right;">
                        <roleBased:RoleBasedFlowPanel ui:field="legalResearchListBoxContainer"
                                                      requiresUserRole="ROLE_USER" visible="false">
                            <g:ListBox ui:field="legalResearchListBox" addStyleNames="{style.legalResearchList}"/>
                        </roleBased:RoleBasedFlowPanel>
                    </div>
                </g:HTMLPanel>
            </g:FlowPanel>

        </g:FlowPanel>


        <g:FlowPanel addStyleNames="{style.leftMenu}" ui:field="leftMenuContainer">
            <g:ToggleButton ui:field="lawsCategoriesButton" down="true"
                            addStyleNames="{style.verticalText} {style.leftMenuButtons}">Kategorier
            </g:ToggleButton>

            <g:ToggleButton ui:field="lawsByNameButton" down="false"
                            addStyleNames="{style.verticalText} {style.leftMenuButtons}">Lagnamn
            </g:ToggleButton>

            <g:ToggleButton ui:field="searchLawsMenuButton" down="false"
                            addStyleNames="{style.verticalText} {style.leftMenuButtons}">Sök lag
            </g:ToggleButton>

            <g:ToggleButton ui:field="lawCasesMenuButton" down="false"
                            addStyleNames="{style.verticalText} {style.leftMenuButtons}">Rättsfall
            </g:ToggleButton>

            <g:ToggleButton ui:field="searchLawCasesMenuButton" down="false"
                            addStyleNames="{style.verticalText} {style.leftMenuButtons}">Sök rättsfall
            </g:ToggleButton>

            <g:ToggleButton ui:field="myLegalResearchMenuButton" down="false"
                            addStyleNames="{style.verticalText} {style.leftMenuButtons}">Utredningar
            </g:ToggleButton>

            <g:ToggleButton ui:field="searchLegalResearchMenuButton" down="false"
                            addStyleNames="{style.verticalText} {style.leftMenuButtons}">Sök utredn.
            </g:ToggleButton>
        </g:FlowPanel>
        <g:FlowPanel addStyleNames="{style.mainContentContainer}, {style.lightblueGradient}">

            <g:FlowPanel ui:field="mainContainer" addStyleNames="{style.mainContainer}, {style.lightblueGradient}">

                <g:SplitLayoutPanel ui:field="splitLayoutPanel" width="400" height="400"
                                    addStyleNames="{style.gwt-SplitLayoutPanel}">
                    <g:west size="410">
                        <!-- todo: use deckpanel -->
                        <g:FlowPanel ui:field="leftContainer"
                                     addStyleNames="{style.leftContainer}, {style.lightblueGradient}">
                            <searchPanels:ShortSearchResultPanel ui:field="searchResultPanel"
                                                                 addStyleNames="{style.searchResultPanel}"
                                                                 visible="false"/>

                            <lawsbynamepanel:LawsByNamePanel ui:field="lawsByNamePanel"/>
                            <lawsbycategorypanel:LawsByCategoryPanel ui:field="lawsByCategoryPanel"/>
                            <lawcasesbyyearpanel:LawCasesByYearPanel ui:field="lawCasesByYearPanel"/>

                            <g:StackLayoutPanel ui:field="stackPanel" unit='PX' height="100%"
                                                addStyleNames="{style.lightblueGradient}">
                                <g:stack>
                                    <g:customHeader size='35'>
                                        <roleBased:RoleBasedFlowPanel ui:field="legalResearchContainer"
                                                                      visible="false"
                                                                      requiresUserRole="ROLE_USER">

                                            <g:HTMLPanel>
                                                <font size="2px" color="#15428B">Rättsutredningar</font>
                                                <g:Anchor text="+" ui:field="addLegalResearch"
                                                          addStyleNames="{style.addLegalResearch}"/>
                                            </g:HTMLPanel>
                                        </roleBased:RoleBasedFlowPanel>
                                    </g:customHeader>
                                    <g:Tree ui:field="legalResearchTree"/>
                                </g:stack>
                                <g:stack>
                                    <g:customHeader size='35'>
                                        <roleBased:RoleBasedFlowPanel ui:field="adminTreeContainer"
                                                                      visible="false"
                                                                      requiresUserRole="ROLE_ADMINISTRATOR">

                                            <g:HTMLPanel>
                                                <g:HTML>
                                                    <font size="2px" color="#15428B">Administration</font>
                                                </g:HTML>
                                            </g:HTMLPanel>
                                        </roleBased:RoleBasedFlowPanel>

                                    </g:customHeader>
                                    <g:FlowPanel>
                                        <g:ScrollPanel height="100%">
                                            <g:Tree ui:field="adminTree">
                                                <g:TreeItem text='Användare'/>
                                            </g:Tree>
                                        </g:ScrollPanel>
                                    </g:FlowPanel>
                                </g:stack>
                            </g:StackLayoutPanel>
                        </g:FlowPanel>
                    </g:west>
                    <g:center>
                        <g:FlowPanel ui:field="container">
                            <g:HTMLPanel>

                                <table>
                                    <tr>
                                        <td>
                                            <g:Button text="Skrapa lagar" ui:field="scrapeLawButton"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <g:Button text="Skrapa rättsfall" ui:field="scrapeCaseLawButton"/>
                                        </td>
                                    </tr>
                                </table>
                            </g:HTMLPanel>
                        </g:FlowPanel>
                    </g:center>
                </g:SplitLayoutPanel>
            </g:FlowPanel>
        </g:FlowPanel>
    </g:FlowPanel>
</ui:UiBinder>