<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style type='lawscraper.client.ui.panels.verticaltabpanel.VerticalTabPanel.Style'>

        .register {
            height: 100%;

            float: left;
            position: relative;
            margin-left: 2%;
            width: 80%;
        }

        .flerp {
            width: 100%;
            float: left;
            position: relative;
            border: 1px solid;
            position: relative;
            cursor: pointer;
            text-align: center;

        }

        .flerpSelected {
            width: 100%;
            float: left;
            position: relative;
            text-align: center;

            padding-bottom: 5px;
            padding-top: 5px;
            border-bottom: 1px solid;
            border-top: 1px solid;
            border-left: 2px solid;
            border-right: none;

            -moz-box-shadow: -5px -1px 6px #000;
            -webkit-box-shadow: -5px -1px 6px #000;
            box-shadow: -5px -1px 6px #000;
            word-wrap: break-word;

        }

        .mainContainer {

        }

        .flerpContainer {
            position: relative;
            float: left;
            width: 10%;
        }

    </ui:style>

    <g:FlowPanel ui:field="mainContainer" addStyleNames="{style.mainContainer}">
        <g:FlowPanel ui:field="flerpContainer" addStyleNames="{style.flerpContainer}"/>
        <g:FlowPanel addStyleNames="{style.register}">
            <g:DeckPanel ui:field="tabContentDeckPanel"/>
        </g:FlowPanel>
    </g:FlowPanel>
</ui:UiBinder>