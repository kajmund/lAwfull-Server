<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:verticaltabpanel="urn:import:lawscraper.client.ui.panels.verticaltabpanel"
             xmlns:resulttable="urn:import:lawscraper.client.ui.panels.resulttable">
    <ui:style>
        .lawTable {
            margin-left: 8px;
            margin-bottom: 32px;
            float: left;
        }

        .topControlBar {
            background-image: url("http://gwt-cx.com/serendipity/serendipity/gwtcx/skins/aqua/images/navigation_pane_header.png");
            background-repeat: repeat-x;
            height: 26px;
            border: 1px solid;
            top: 0;
            left: 0;
            right: 0;
        }

        .container {
            position: relative;
            border-left: 1px solid;
            border-right: 1px solid;
            border-bottom: 1px solid;
            height: 100%;
            min-width: 300px;
        }

        .bottomControlPanel {
            float: right;
        }

        .headerFont {
            color: #15428B;
            cursor: default;
            font-family: Tahoma, Verdana, sans-serif;
            font-size: 16px;
            font-weight: bold;
            position: absolute;
            left: 4px;
        }

        .searchBoxContainer {
            margin-top: 4px;
            margin-bottom: 4px;
            margin-left: 3%;
            width: 100%;
        }

        .searchBox {
            width: 90%;
        }

        .bodyContainer {

        }

        .flerpContainer {
            float: left;
            margin-left: 3%;
        }
    </ui:style>


    <g:FlowPanel addStyleNames="{style.container}">
        <g:FlowPanel addStyleNames="{style.topControlBar}">
            <g:FlowPanel addStyleNames="{style.bottomControlPanel}">
                <g:HTML addStyleNames="{style.headerFont}">Lagar efter namn</g:HTML>
            </g:FlowPanel>
        </g:FlowPanel>
        <g:FlowPanel addStyleNames="{style.bodyContainer}">
            <g:FlowPanel addStyleNames="{style.searchBoxContainer}">
                <g:TextBox addStyleNames="{style.searchBox}"/>
            </g:FlowPanel>
            <verticaltabpanel:VerticalTabPanel ui:field="verticalpanel" addStyleNames="{style.flerpContainer}"/>
        </g:FlowPanel>
    </g:FlowPanel>
</ui:UiBinder>