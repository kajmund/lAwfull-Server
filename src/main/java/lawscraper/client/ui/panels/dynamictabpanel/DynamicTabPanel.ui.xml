<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style type='lawscraper.client.ui.panels.dynamictabpanel.DynamicTabPanel.Style'>

        .register {
            height: 100%;
        }

        .flerp {
            float: left;
            border: 1px solid;
            position: relative;
            cursor: pointer;
            text-align: center;
            padding: 4px;
            white-space: nowrap;

            -webkit-border-radius: 6px 6px 0px 0px;
            -moz-border-radius: 6px 6px 0px 0px;
            border-radius: 6px 6px 0px 0px;
            background-color: #ffffff;
            z-index: 1;
        }

        .flerpSelected {
            float: left;
            position: relative;
            text-align: center;
            padding: 4px;
            white-space: nowrap;

            -webkit-border-radius: 6px 6px 0px 0px;
            -moz-border-radius: 6px 6px 0px 0px;
            border-radius: 6px 6px 0px 0px;
            background-color: #ffffff;
            z-index: 1;
            border-bottom-color: white;
        }

        .mainContainer {
            width: 100%;
            padding: 8px;
            border: 1px black;
        }

        .contentDeckPanel {
            position: static;
            top: 100px;

        }

        .flerpContainer {
            background-color: white;
            position: relative;
            width: 100%;
            z-index: 1;

        }

    </ui:style>

    <g:FlowPanel ui:field="mainContainer" addStyleNames="{style.mainContainer}">
        <g:FlowPanel ui:field="flerpContainer" addStyleNames="{style.flerpContainer}"/>
        <g:FlowPanel styleName="{style.register}">
            <g:DeckPanel ui:field="tabContentDeckPanel" addStyleNames="{style.contentDeckPanel}"/>
        </g:FlowPanel>

    </g:FlowPanel>
</ui:UiBinder>